<Window x:Class="CuratorApp.Views.StudentsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Список студентов"
        Height="500" Width="700"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <!-- Таблица -->
            <RowDefinition Height="Auto"/>
            <!-- Ближайший ДР -->
            <RowDefinition Height="Auto"/>
            <!-- Кнопки -->
        </Grid.RowDefinitions>

        <!-- Таблица студентов -->
        <DataGrid ItemsSource="{Binding Students}"
          SelectedItem="{Binding SelectedStudent, Mode=TwoWay}"
          AutoGenerateColumns="False"
          Grid.Row="0"
          Margin="0,0,0,10"
          IsReadOnly="True"
          CanUserAddRows="False"
          CanUserResizeColumns="False"
          MouseDoubleClick="DataGrid_MouseDoubleClick"
          HorizontalScrollBarVisibility="Disabled">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Фамилия" Binding="{Binding LastName}" Width="*" />
                <DataGridTextColumn Header="Имя" Binding="{Binding FirstName}" Width="*" />
                <DataGridTextColumn Header="Отчество" Binding="{Binding MiddleName}" Width="*" />
                <DataGridTextColumn Header="Дата рождения" Binding="{Binding Birthday}" Width="*" />
                <DataGridTextColumn Header="Телефон" Binding="{Binding Phone}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>



        <!-- Информация о ближайшем дне рождения -->
        <TextBlock Text="{Binding UpcomingBirthdayInfo}"
                   Grid.Row="1"
                   FontWeight="Bold"
                   FontSize="14"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10"
                   Foreground="DarkSlateBlue"/>

        <!-- Кнопки управления -->
        <StackPanel Orientation="Horizontal"
                    Grid.Row="2"
                    HorizontalAlignment="Center"
                    Margin="0,10,0,0">
            <Button Content="Добавить"
                    Command="{Binding AddCommand}"
                    Margin="5"
                    Width="100"/>
            <Button Content="Редактировать"
                    Command="{Binding EditCommand}"
                    Margin="5"
                    Width="100"/>
            <Button Content="Удалить"
                    Command="{Binding DeleteCommand}"
                    Margin="5"
                    Width="100"/>
            <Button Content="Обновить"
                    Command="{Binding RefreshCommand}"
                    Margin="5"
                    Width="100"/>
        </StackPanel>
    </Grid>
</Window>
