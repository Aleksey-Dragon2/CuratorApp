<Window x:Class="CuratorApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация / Регистрация"
        Height="400" Width="400"
        MinWidth="350" MinHeight="350"
        MaxWidth="450" MaxHeight="500"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <TabControl>
            <!-- Вкладка Вход -->
            <TabItem Header="Вход">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" MinWidth="80"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Логин -->
                    <TextBlock Text="Логин:" VerticalAlignment="Center" Grid.Row="0" Grid.Column="0" Margin="0,0,10,10"/>
                    <TextBox Name="LoginUsernameTextBox" Grid.Row="0" Grid.Column="1" Height="25" Margin="0,0,0,10"/>

                    <!-- Пароль -->
                    <TextBlock Text="Пароль:" VerticalAlignment="Center" Grid.Row="1" Grid.Column="0" Margin="0,0,10,10"/>
                    <PasswordBox Name="LoginPasswordBox" Grid.Row="1" Grid.Column="1" Height="25" Margin="0,0,0,10"/>

                    <!-- Кнопка Войти -->
                    <Button Content="Войти" Grid.Row="2" Grid.Column="1" Width="100" Height="30" HorizontalAlignment="Left" Click="LoginButton_Click"/>
                </Grid>
            </TabItem>

            <!-- Вкладка Регистрация -->
            <TabItem Header="Регистрация">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" MinWidth="130"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Логин пользователя -->
                    <TextBlock Text="Логин:" VerticalAlignment="Center" Grid.Row="0" Grid.Column="0" Margin="0,0,10,10"/>
                    <TextBox Name="RegisterUsernameTextBox" Grid.Row="0" Grid.Column="1" Height="25" Margin="0,0,0,10"/>

                    <!-- Email -->
                    <TextBlock Text="Email:" VerticalAlignment="Center" Grid.Row="1" Grid.Column="0" Margin="0,0,10,10"/>
                    <TextBox Name="RegisterEmailTextBox" Grid.Row="1" Grid.Column="1" Height="25" Margin="0,0,0,10"/>

                    <!-- Пароль -->
                    <TextBlock Text="Пароль:" VerticalAlignment="Center" Grid.Row="2" Grid.Column="0" Margin="0,0,10,10"/>
                    <PasswordBox Name="RegisterPasswordBox" Grid.Row="2" Grid.Column="1" Height="25" Margin="0,0,0,10"/>

                    <!-- Подтверждение пароля -->
                    <TextBlock Text="Подтверждение пароля:" VerticalAlignment="Center" Grid.Row="3" Grid.Column="0" Margin="0,0,10,10"/>
                    <PasswordBox Name="RegisterConfirmPasswordBox" Grid.Row="3" Grid.Column="1" Height="25" Margin="0,0,0,10"/>

                    <!-- Кнопка Зарегистрироваться -->
                    <Button Content="Зарегистрироваться" Grid.Row="4" Grid.Column="1" Width="140" Height="30" HorizontalAlignment="Left" Click="RegisterButton_Click"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
